{
  "name": "trpc-api",
  "version": "1.0.0",
  "description": "tRPC API for Othello game",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "check-types": "tsc --noEmit",
    "test": "vitest run"
  },
  "keywords": ["othello", "trpc", "api"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@trpc/server": "^10.44.6",
    "othello-core": "workspace:*",
    "superjson": "^2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7"
  }
}
